#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
    int a,b;
    float c,d;
    scanf("%d %d",&a, &b);
    scanf("%f %f",&c, &d);
    
    int e=a+b;
    int f=a-b;
    float g=c+d;
    float h=c-d;
    printf("%d %d", e, f);
    printf("\n%.1f %.1f", g, h);
    return 0;
}
